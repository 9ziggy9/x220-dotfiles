general {
    colors = true
    interval = 5
    output_format = "i3bar"
}

order += "disk /"
order += "load"
order += "cpu_usage"
order += "tztime local"

# CPU usage display
cpu_usage {
    format = "CPU: %usage"
}

# Disk usage display
disk "/" {
    format = "Disk: %avail"
}

# Load average display
load {
    format = "Load: %1min"
}

# Time display
tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}